{
    "name": "@botvy/rfc-synchronizer",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc -w",
        "predev": "npm run build",
        "dev": "npm-run-all --parallel build:watch start:watch",
        "format:check": "prettier -l src",
        "format:write": "prettier --write src",
        "start": "node dist/main.js",
        "start:watch": "nodemon dist/main.js"
    },
    "dependencies": {
        "@octokit/webhooks": "^7.2.0",
        "discord.js": "^12.2.0",
        "inversify": "^5.0.1",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.24",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/node": "^13.13.0",
        "husky": ">=4",
        "lint-staged": ">=10",
        "nodemon": "^2.0.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.4",
        "typescript": "^3.8.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,css,md}": "prettier --write"
    }
}
